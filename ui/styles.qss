QMainWindow {
    background-color: #121212;
}

QPushButton {
    background-color: #1f1f1f;
    color: #ffffff;
    padding: 10px;
    border-radius: 8px;
    border: 1px solid #2a2a2a;
}

QPushButton:hover {
    background-color: #272727;
}

QLineEdit, QTextEdit, QComboBox {
    background-color: #1e1e1e;
    color: #ffffff;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 6px;
}

QLabel {
    color: #bbbbbb;
}
